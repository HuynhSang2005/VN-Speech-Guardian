# Environment variables cho VN Speech Guardian Frontend
# Copy file này thành .env.local và cấu hình values phù hợp

# =============================================================================  
# Clerk Authentication - Required
# =============================================================================
# Lấy từ https://dashboard.clerk.com
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
VITE_CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# =============================================================================
# API Configuration - Required  
# =============================================================================
# NestJS Gateway API base URL
VITE_API_BASE_URL=http://localhost:4000

# WebSocket connection URL
VITE_WS_URL=ws://localhost:4000

# API request timeout (milliseconds)
VITE_API_TIMEOUT=10000

# =============================================================================
# Audio Processing Configuration - Optional
# =============================================================================
# Default audio sample rate (Hz)
VITE_DEFAULT_SAMPLE_RATE=16000

# Audio chunk size (samples) 
VITE_AUDIO_CHUNK_SIZE=4096

# Voice Activity Detection threshold (0-1)
VITE_VAD_THRESHOLD=0.3

# =============================================================================
# Content Moderation Configuration - Optional
# =============================================================================
# Detection thresholds (0-1)
VITE_MODERATION_BLOCK_THRESHOLD=0.8
VITE_MODERATION_WARN_THRESHOLD=0.5

# Real-time detection enabled
VITE_REAL_TIME_DETECTION=true

# =============================================================================
# UI/UX Configuration - Optional
# =============================================================================
# Default theme (light | dark | system)
VITE_DEFAULT_THEME=system

# Enable dark mode toggle
VITE_ENABLE_DARK_MODE=true

# Show confidence scores in UI
VITE_SHOW_CONFIDENCE_SCORES=true

# =============================================================================
# Development & Debugging - Optional
# =============================================================================
# Environment mode
VITE_ENVIRONMENT=development

# Enable debug logging  
VITE_DEBUG=true

# Enable mock data trong development
VITE_USE_MOCK_DATA=false

# Mock response delay (milliseconds)
VITE_MOCK_DELAY=1000

# =============================================================================
# Analytics & Monitoring - Optional
# =============================================================================
# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# =============================================================================
# Progressive Web App - Optional
# =============================================================================
# Enable service worker
VITE_ENABLE_SERVICE_WORKER=false

# Enable offline support
VITE_ENABLE_OFFLINE=false

# =============================================================================
# Performance & Optimization - Optional  
# =============================================================================
# Bundle analyzer enabled trong build
VITE_BUNDLE_ANALYZER=false

# Source maps trong production
VITE_SOURCE_MAPS=false

# Preload critical resources
VITE_PRELOAD_CRITICAL=true