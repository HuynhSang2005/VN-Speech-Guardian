APP_HOST=0.0.0.0
APP_PORT=8001
GATEWAY_API_KEY=dev-secret

# Models loading
AI_LOAD_MODELS=true

# PhoBERT (HF) and ONNXRuntime
PHOBERT_CHECKPOINT_DIR=apps/ai-worker/app/models/phobert-hsd
PHOBERT_ONNX_DIR=apps/ai-worker/app/models/bert-finetuned-onnx
USE_ONNXRUNTIME=true
TEXT_MAX_LEN=256
MOD_LABELS_JSON={"safe":0,"warn":1,"block":2}

# Whisper ASR
ASR_MODEL_NAME=small
ASR_DEVICE=cpu
ASR_COMPUTE_TYPE=int8
ASR_LANGUAGE=vi
ASR_BEAM_SIZE=5
ASR_SAMPLE_RATE=16000
# Per-session chunk rate limit in ms (0 = disabled)
ASR_MIN_INTERVAL_MS=0
# Inline moderation in ASR response
ASR_RUN_MOD=false

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000